{
  "extends": "@egomobile/tsconfig",
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "target": "es2019",
    "lib": ["es2019"],
    "moduleResolution": "node",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowJs": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "sandbox", "scripts"]
}
